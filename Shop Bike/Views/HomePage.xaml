<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop_Bike.Views.HomePage"
             xmlns:local="clr-namespace:Shop_Bike.ViewModels"
             Title="Shop Bike"
             x:DataType="local:HomePageViewModel" >

    <ContentPage.BindingContext>
        <local:HomePageViewModel/>
    </ContentPage.BindingContext>

    <Grid BackgroundColor="White"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0">

            <Border StrokeThickness="5"
                    StrokeShape="RoundRectangle 100,100,100,100"
                    Background="#EEEEEE "
                    Padding="5,10"
                    HorizontalOptions="Center">

                <Border.Stroke>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#DADADA"
                          Offset="0.1" />
                        <GradientStop Color="White"
                          Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>


                <SearchBar Placeholder="Search"
                           FontSize="Medium"
                           WidthRequest="270"/>
            </Border>

            <Border StrokeThickness="5"
                    StrokeShape="RoundRectangle 80,80,80,80"
                    Background="#EEEEEE "
                    Padding="10,10"
                    WidthRequest="100"
                    HorizontalOptions="Center">

                <Border.Stroke>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#DADADA"
                          Offset="0.1" />
                        <GradientStop Color="White"
                          Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>

                <Button Text="Cart"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontSize="20"
                        FontAttributes="Bold"
                        Padding="5"/>
            </Border>

        </HorizontalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Bikes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.RowSpan="2"
                               Source="{Binding }"

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>




    </Grid>
    
    

</ContentPage>

